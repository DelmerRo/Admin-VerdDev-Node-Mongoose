<div class="container">
    <form action="/registroUsuario" method="POST">
        <fieldset>
            <legend>Registrar</legend>

            <div class="form-group">
                <label class="form-label mt-4">Nombre</label>
                <input name="nombre" type="text" class="form-control" placeholder="Ingresar nombre" value="{{nombre}}">
            </div>
            <div class="form-group">
                <label class="form-label mt-4">Apellido</label>
                <input name="apellido" type="text" class="form-control" placeholder="Ingresar apellido" value="{{apellido}}">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1" class="form-label mt-4">Email</label>
                <input name="email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Ingresar email" value="{{email}}">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1" class="form-label mt-4">Password</label>
                <input name="password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Ingresar Password">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1" class="form-label mt-4">Confirmar Password</label>
                <input name="confirmPassword" type="password" class="form-control" id="exampleInputPassword1" placeholder="Ingresar Confirmar Password">
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>

        </fieldset>
    </form>
</div>