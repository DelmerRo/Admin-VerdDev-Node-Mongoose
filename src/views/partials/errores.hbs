{{#if error}}
    <div class="alert alert-dismissible alert-danger">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <strong>Algo salio mal!</strong> {{error}}.
    </div>
{{/if}}

{{#each errores}}
    <div class="alert alert-dismissible alert-danger">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <strong>Algo salio mal!</strong> {{texto}}.
    </div>
{{/each}}